<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-primary">Nova Categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body mt-4">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de Criação: {{date}}</small>
            <br>
            {{!-- <a href="/admin/categorias/edit/{{_id}}">
                <button class="btn btn-success mt-4">Editar</button>
            </a> --}}
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-warning mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <center>
        <h5 class="mt-4">Nenhuma categoria registrada...</h5>
    </center>
{{/each}}